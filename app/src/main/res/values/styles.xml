<resources>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Wallpaper.NoTitleBar">

        <!-- Android Activity 실행시 Preview 화면을 제거하고, 로딩화면을 투명하게 만들어 바로 나타나는 것과 같은 효과 -->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsTranslucent">true</item>​
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="ListView" parent="AppBaseTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/listview_textsize</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/listview_padding</item>
    </style>

    <style name="CustomTimePicker" parent="AppBaseTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/backGround</item>
        <item name="android:padding">@dimen/listview_padding</item>
    </style>
</resources>