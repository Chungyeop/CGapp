<resources>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Wallpaper.NoTitleBar">

        <!-- Android Activity 실행시 Preview 화면을 제거하고, 로딩화면을 투명하게 만들어 바로 나타나는 것과 같은 효과 -->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsTranslucent">true</item>​
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="ListView" parent="AppBaseTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/listview_textsize</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/listview_padding</item>
    </style>

    <style name="Widget.Cgapp.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.Cgapp.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="DateTextStyle">
        <item name="android:layerType">software</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textScaleX">0.87</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#BF000000</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TimeTextStyle">
        <item name="android:layerType">software</item>
        <item name="android:textSize">50dp</item>
        <item name="android:textScaleX">0.87</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#BF000000</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>